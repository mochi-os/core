{{define "title"}}{{if .Feed}}{{.Feed.Name}}{{else}}Feeds{{end}}{{end}}
{{template "head" .}}
<p class="header"><a href="/">Comms</a> | <a href="/feeds">Feeds</a>{{if .Feed}} | {{.Feed.Name}}{{end}}</p>

<p>{{range .Feeds}}<a href="/feeds/{{.ID}}">{{.Name}}</a> | {{end}}<a href="/feeds/find">Subscribe to feed</a> | <a href="/feeds/new">Create feed</a></p>

{{if .Feed}}<p><a href="/feeds/{{.Feed.ID}}/unsubscribe">Unsubscribe from {{.Feed.Name}}</a>{{if .Owner}} | <a href="/feeds/{{.Feed.ID}}/post">New post in {{.Feed.Name}}</a>{{end}}</p>{{end}}

<!--TODO Feed name, date and time-->
{{range .Posts}}<p><a href="/feeds/{{.Feed}}/{{.ID}}">{{.Body}}</a> | &#8618;{{.Comments}}<br/>
<!-- TODO Add scroll bar -->
{{range .Attachments}}<a href="/files/{{.Feed}}/{{.File}}/{{.Name}}"><img src="/files/thumbnail/{{.Feed}}/{{.File}}/{{.Name}}"/></a>&nbsp;{{end}}

<!--TODO Separate posts-->

</p>{{end}}

