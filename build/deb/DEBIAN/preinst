#!/bin/bash
 
if  [ "$1" = install ] 
then
	echo "Adding mochi user and group ..."

	if ! getent group mochi >/dev/null; then
		addgroup --system mochi >/dev/null
	fi
 
	if ! getent passwd mochi >/dev/null; then
		adduser --system --disabled-login --ingroup mochi --no-create-home --home /var/lib/mochi --gecos "Mochi server" --shell /usr/sbin/nologin mochi >/dev/null
	fi
fi
