[Unit]
Description=Mochi server
After=network.target

[Service]
Type=simple
ExecStartPre=+setcap 'cap_net_bind_service=+ep' /usr/bin/mochi-server
ExecStart=/usr/bin/mochi-server
User=mochi
Group=mochi
PIDFile=/run/mochi-server.pid
Restart=on-abnormal
RestartSec=1
LimitSTACK=infinity
LimitNOFILE=65535
LimitNPROC=65535

[Install]
WantedBy=multi-user.target
