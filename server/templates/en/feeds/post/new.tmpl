{{define "title"}}New post{{end}}
{{template "head" .}}
<p class="header"><a href="/">Comms</a> | <a href="/feeds">Feeds</a>{{if .Current}} | <a href="/feeds/{{.ID}}">{{.Name}}</a>{{end}} | New post

<form method="post" enctype="multipart/form-data" action="/feeds/post/create">
    <select name="feed">{{range .Feeds}}<option value="{{.ID}}" {{if eq $.Current .ID}}selected{{end}}>{{.Name}}</option>{{end}}</select><br/>
	<textarea name="body" rows="20" cols="100"></textarea><br/>
	<input type="file" name="attachments" multiple><br/>
    <input type="submit" value="Post"/>
</form>

{{template "foot" .}}
